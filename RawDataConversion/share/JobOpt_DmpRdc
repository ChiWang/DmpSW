 *-----------------------------------------------------
 *  This is an example how to run simulation of DAMPE
 *-----------------------------------------------------
'''

# load lib. of DAMPE software
import os
import sys
if os.environ['DMPSWSYS'] not in sys.path:
    sys.path.append(os.getenv('DMPSWSYS')+'/lib')

import libDmpCore as DmpCore
import libDmpRdc as DmpRdc

# set output file path. 
#DmpCore.PhaseManager.SetPhase(DmpCore.DmpEPhase.kQuarter)  # default is kProduct, if NOT set

# RUN simulation
DmpRdc.SetConnectorPsd("")
DmpRdc.SetConnectorStk("")
DmpRdc.SetConnectorBgo("")
DmpRdc.SetConnectorNud("")
DmpRdc.Initialize()
DmpRdc.SetInDataPath("./share/testData")      # where to find the macro file which is a argument of Execute(). If NOT set will use "./"
DmpRdc.SetOutDataPath("./test")          # where to save output. If NOT set at here will use "./"
DmpRdc.SetOutDataName("electronRDC.root")   # set output data name(*.root) for the next Execute(). If NOT set will use the default name(time stamp)
DmpRdc.Execute("BGO_ScienceData_20121003012321.dat")
DmpRdc.Execute("BGO_ScienceData_20121003012000.dat")      # start a new run, without delete physics list, detector construction and all user actions.
DmpRdc.Clear()

